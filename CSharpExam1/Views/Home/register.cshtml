@model Users

<div class="container-fluid">
    <h5 class="mx-auto" style="display: inline-block">Sign up for an account:</h5>
    <form action="/register" method="post" style="Width: 470px">
        <div class="form-group row mt-4">
            <label asp-for="Name"></label>
            <span asp-validation-for="Name" class="text-danger"></span>
            <input asp-for="Name" class="form-control" placeholder="Please enter your name..">
        </div>
        <div class="form-group row">
            <label asp-for="Alias"></label>
            <span asp-validation-for="Alias" class="text-danger"></span>
            <input asp-for="Alias" class="form-control" placeholder="Please enter an Alias..">
        </div>
        <div class="form-group row">
            <label asp-for="Email"></label>
            <span asp-validation-for="Email" class="text-danger"></span>
            <input asp-for="Email" class="form-control" placeholder="Please enter an email address..">
        </div>
        <div class="form-group row">
            <label asp-for="Password"></label>
            <span asp-validation-for="Password" class="text-danger"></span>
            <input type="password" asp-for="Password" class="form-control" placeholder="Choose wisely!">
        </div>
        <div class="form-group row">
            <label asp-for="Check"></label>
            <span asp-validation-for="Check" class="text-danger"></span>
            <input type="password" asp-for="Check" class="form-control" placeholder="Re-enter your password.">
        </div>
        <button type="submit" class="btn btn-primary">Register</button>
    </form>
</div>